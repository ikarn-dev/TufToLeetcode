{
  "manifest_version": 3,
  "name": "TufToLeetcode",
  "version": "1.0",
  "description": "Bridge between TakeUForward and LeetCode - Find and analyze problems seamlessly",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://leetcode.cn/*",
    "https://*.leetcode.com/*",
    "https://leetcode-api-pied.vercel.app/*",
    "https://takeuforward.org/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TufToLeetcode",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://takeuforward.org/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "leetcode-data.json",
        "ai-overlay.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}